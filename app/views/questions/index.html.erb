
<div class="container">
  <div class="row">
    <ul class="list-group">
      <div class="span4">
        <div class="form">
          <%= form_for @question do |f| %>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <p><%= f.text_field :title, class: "form-control", placeholder:"Theme of question" %></p>
                </div>
              </div>
              <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                  <p><%= f.text_area :body,  class: "form-control", placeholder:"Question" %></p>
                </div>
              </div>
              <p><%= f.submit class: "btn btn-success btn-sm"%></p>

              </div>
      </div>

        <% end %>
        </ul>
  </div>



  <div class="span3">
    <% @questions.each_with_index do |question, index| %>
        <li class="list-group-item active">#<%= question.id %> <%= question.title %></li>
        <li class="list-group-item list-group-item-success"><%= question.body %></li>
        <span><i>Question by: </i><%= question.user.name %></span>

        <ul class="list-group">
          <% question.answers.each_with_index do |answer, index| %>
              <li class="list-group-item active"><%= answer.response %></li>
              <span><i>Posted by: </i><%= answer.user.name%></span>
              <%= link_to image_tag("like.jpg", class:"like"),controller: :likes,
                          action: :create, data: answer.id %>:<%=answer.votes%>
              <% if answer.confirmed%>
                  <%= image_tag("cake.jpg", class:"like") %>
              <% end %>
          <% end %>
        </ul>
        <div class="form">
          <div class="row">
            <%= form_for @answer do |f| %>
                <div class="control-group">
                  <div class="form-group floating-label-form-group controls">
                    <p><%= f.text_area :response, class:"form-control", placeholder:"I think ..." %></p>
                  </div>
                </div>
                <input type="hidden" name="question_id" value="<%= question.id %>">

                <p><%= f.submit "Answer", class:"btn btn-success btn-sm" %></p>

            <% end %>
          </div>
        </div>
  </div>


  <% end %>
  </ul>
  </div>

</div>