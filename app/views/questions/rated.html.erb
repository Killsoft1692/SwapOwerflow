<div class="row">
  <ul>
    <% for question in @questions %>
        <li class="list-group-item list-group-item-success">
          <%= link_to question.title, question_path(id: question.id) %>
        </li>
        <span><i>Posted by: <b><%= question.user.name %></b></i></span>
        <hr>

    <% end %>
  </ul>
</div>
